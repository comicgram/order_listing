<div class="page-header">
  <h1>Pedidos recientes</h1>
</div>

<div class="row">
  <table class="table table-hover">
    <thead>
      <th>Pedido</th>
      <th>Comprado</th>
      <th>Fecha</th>
      <th>Total</th>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td>
            <b>#<%= order["order_number"] %></b>
          </td>
          <td>
            <a class="show-items" href="#"><%= order["total_line_items_quantity"] %> art√≠culos</a>
            <table class="hide">
              <tbody>
                <% order["line_items"].each do |line_item| %>
                  <tr class="">
                    <td class="qty"><b><%= line_item["quantity"] %></b> - </td>
                    <td class="name">&nbsp;<%= line_item["sku"] %> - <a target="_blank" href=<%= "https://tienda.comicgram.io/wp-admin/post.php?post=#{line_item['product_id']}&amp;action=edit" %> ><%= line_item["name"] %></a></td>
                  </tr>                
                <% end %>
              </tbody>
            </table>
          </td>
          <td>
            <%= order["created_at"][0..9] %>
          </td>
          <td>
            $<%= order["total"] %> <br><em>via <%= order["payment_details"]["method_title"] %></em>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>